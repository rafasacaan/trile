<% if @circuits.count  %>
<% count = 0 %>
  <% @circuits.each do |c| %>
  <% if count.modulo(3) == 0 %>
    <div class="row"><!-- New row every 3 circuit-->
  <% end %>
  <div class="col-md-4 col-sm-4 mb">
    <div class="darkblue-panel pn">
        <div class="darkblue-header">
          <h2 class = "darkblue-panel-title"><%=c.description.titleize%></h2>
        </div>
        <div class="chart mt">
        <div id="linechart-<%=c.id%>" data-circuit="c.id">
       </div>
     </div>
    <p class="mt" id="p-<%=c.id%>"></p>
</div>
  </div><!-- /col-md-4 -->
   <% count += 1%>
   <% if count.modulo(3) == 0 || count == @circuits.count %>
    </div><!-- New row every 3 circuit-->
  <% end %>
  <% end %>
<% end %>