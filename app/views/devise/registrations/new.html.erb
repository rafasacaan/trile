<div id="login-page">
   <div class="container">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: {:class => 'form-login'}) do |f| %>
  <h2 class="form-login-heading">RegÃ­strate</h2>
  <div class="login-wrap">
  <%= devise_error_messages! %>
  <div class="field">
   <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Nombre' %>
    <br>
  </div>
  <div class="field">
   <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
    <br>
  </div>
  <div class="field">
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
   <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
  <br>
  </div>
  <div class="field">
   <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>
    <br>
  </div>
  <div class="actions">
   <%= f.submit "Ingresar", :class =>"btn btn-theme btn-block" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
</div>