<div id="login-page">
   <div class="container">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :class => 'form-login' }) do |f| %>
<h2 class="form-login-heading">Change your password</h2>
<div class="login-wrap">
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
  <br>
  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>
  <br>
  <div class="actions">
    <%= f.submit "Change my password", :class =>"btn btn-theme btn-block" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
</div>
