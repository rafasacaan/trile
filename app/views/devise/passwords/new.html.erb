    <div id="login-page">
 	 <div class="container">
 	 <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'form-login' }) do |f| %>
    <h2 class="form-login-heading" >Forgot your password?</h2>
    <div class="login-wrap">
   	<%= render 'layouts/alerts'%>
   	 <%= devise_error_messages! %>
     <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>      
      <div class="actions">
      	<br>
      	<%= f.submit "Send me reset password instructions", :class =>"btn btn-theme btn-block" %>
      	</div>
    <% end %>
<%= render "devise/shared/links" %>
      </div>
    </div>
    </div>
  