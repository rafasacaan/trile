<%=render "graphs"%>
<div class="panel panel-default tab-box">
	<div class="panel-heading">
		<h4><i class="fa fa-angle-right"></i> Detalle del Circuito</h4>
	</div>
<section id="no-more-tables">  
<table class="table table-striped table-advance cf">
	 <thead class="cf">
          <tr>
              <th>ID</th>
              <th>Descripcion</th>
              <th class="numeric">Tipo</th>
              <th class="numeric">Estado</th>
              <th class="numeric">Creado</th>
              <th class="numeric">Ultima medicion</th>
              <th class="numeric">Mediciones</th>
              <th class="numeric"></th>
          </tr>
    </thead>
    <tbody>
       <tr>
          <td data-title="ID"><%= @circuit.id %></td>
          <td data-title="Descripcion"><%= @circuit.description %></td>
          <td class="numeric" data-title="Tipo"><%= @circuit.type %></td>
          <td class="numeric" data-title="Estado"><span class="label label-<%= circuit_status(@circuit.status) %> label-mini"><%= @circuit.status %></span></td>
          <td class="numeric" data-title="Creado"><%= format_time @circuit.created_at %></td>
          <td class="numeric" data-title="Ultima medicion">
          	<% if @circuit.measures.count == 0 %>
				<%= "Sin Mediciones" %>
			<% else %>
				<%= time_ago_in_words(@circuit.measures.last.created_at) %>
			<% end %>
		  </td>
          <td class="numeric" data-title="Mediciones"><%= @circuit.measures.count %></td>
          <td class="numeric">
          	<%= link_to edit_circuit_path(@circuit), type: "button", class: "btn btn-primary btn-xs" do %>
          	<i class="fa fa-pencil"></i>
    		    <% end %>
          </td>              
       </tr>
    </tbody>
</table>
</section>
</div>
<!--/showback -->
<div class="row">
  <div class="col-md-1 col-md-offset-11">
    <%= link_to "< Circuitos", circuits_path, type: "button", class: "btn btn-success btn-xs" %>          
  </div>
</div>